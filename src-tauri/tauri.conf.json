{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../build",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "EzUp",
    "version": "0.0.3"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true
    },
    "allowlist": {
      "app": {
        "all": true,
        "hide": true,
        "show": true
      },
      "dialog": {
        "all": true
      },
      "notification": {
        "all": true
      },
      "clipboard": {
        "all": true
      },
      "all": false,
      "globalShortcut": {
        "all": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": [
          "$APPDATA/*",
          "$APPLOCALDATA/*",
          "$APPLOG/*",
          "$APPCONFIG/*",
          "$DESKTOP/*",
          "$DOWNLOAD/*",
          "$TEMP/*",
          "$CONFIG/*",
          "$CACHE/**"
        ]
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "tech.huakun.ezup",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://tauri-ezup-updater.vercel.app/update/{{target}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDY3OTFCOTBGMzAwNDAwMQpSV1FCUUFEemtCdDVCcE5GTFY4NGxCZW44NjBWSy95elY3dGFGSUJRR2VJdDY4cFNqcUYvYkJMRQo="
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 1000,
        "resizable": true,
        "title": "EzUp",
        "width": 800
      }
    ]
  }
}
